{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitThis": true,
        "isolatedModules": true,
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "allowJs": true,
        "lib": ["esnext", "dom"],
        "types": ["vite/client", "@inertiajs/core", "@inertiajs/vue3", "ziggy-js"],
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "resources/js/*"
            ]
        }
    },
    "typeRoots": ["node_modules/@types", "resources/js/types"],
    "include":[
        "resources/js/**/*.ts",
        "resources/js/**/*.d.ts",
        "resources/js/**/*.vue"
    ],
    "exclude": [
        "node_modules",
        "public"
    ]
}
